-- RainbowUI Movible, tama침o compacto, texto "SCRIPT游땓LUIS", fondo cl치sico y borde arco칤ris
local RainbowUI = {}
RainbowUI.__index = RainbowUI

local function rainbowColor(speed, sat, val)
    sat = sat or 1
    val = val or 1
    return Color3.fromHSV((tick()*speed)%1, sat, val)
end

function RainbowUI:CreateWindow(width, height)
    -- Defaults
    width, height = width or 270, height or 320

    -- ScreenGui
    local sg = Instance.new("ScreenGui")
    sg.Name = "RainbowUI"
    sg.ResetOnSpawn = false
    sg.IgnoreGuiInset = true
    if syn and syn.protect_gui then syn.protect_gui(sg) end
    sg.Parent = game:GetService("Players").LocalPlayer.PlayerGui

    -- MainFrame
    local frame = Instance.new("Frame")
    frame.Name = "MainFrame"
    frame.Size = UDim2.new(0, width, 0, height)
    frame.Position = UDim2.fromOffset(160, 180)
    frame.BackgroundTransparency = 1
    frame.Parent = sg

    -- Rainbow border (4 lados)
    local borders = {}
    for _,side in ipairs{"Top","Bottom","Left","Right"} do
        local f = Instance.new("Frame")
        f.Parent = frame
        f.Name = side
        f.BorderSizePixel = 0
        f.ZIndex = 3
        if side=="Top" then
            f.Size, f.Position = UDim2.new(1,0,0,3), UDim2.new(0,0,0,-3)
        elseif side=="Bottom" then
            f.Size, f.Position = UDim2.new(1,0,0,3), UDim2.new(0,0,1,0)
        elseif side=="Left" then
            f.Size, f.Position = UDim2.new(0,3,1,0), UDim2.new(0,-3,0,0)
        elseif side=="Right" then
            f.Size, f.Position = UDim2.new(0,3,1,0), UDim2.new(1,0,0,0)
        end
        f.BackgroundColor3 = Color3.fromRGB(255,0,0)
        table.insert(borders, f)
    end

    -- Fondo principal
    local bg = Instance.new("Frame")
    bg.Name = "BG"
    bg.BackgroundColor3 = Color3.fromRGB(20,22,35)
    bg.BorderSizePixel = 0
    bg.Size = UDim2.new(1,0,1,0)
    bg.Position = UDim2.new(0,0,0,0)
    bg.ZIndex = 1
    bg.Parent = frame

    -- Barra de t칤tulo movible
    local bar = Instance.new("Frame")
    bar.Name = "Bar"
    bar.BackgroundColor3 = Color3.fromRGB(16, 16, 25)
    bar.Size = UDim2.new(1, 0, 0, 32)
    bar.BorderSizePixel = 0
    bar.Parent = bg
    bar.ZIndex = 2

    -- T칤tulo FIJO personalizado (grande y blanco)
    local title = Instance.new("TextLabel")
    title.Name = "Title"
    title.Size = UDim2.new(1, 0, 1, 0)
    title.BackgroundTransparency = 1
    title.Text = "  SCRIPT游땓LUIS"
    title.Font = Enum.Font.GothamBold
    title.TextSize = 22
    title.TextStrokeTransparency = 0.75
    title.TextColor3 = Color3.fromRGB(255,255,255)
    title.TextXAlignment = Enum.TextXAlignment.Left
    title.Parent = bar
    title.ZIndex = 3

    -- ScrollingFrame de botones
    local scroll = Instance.new("ScrollingFrame")
    scroll.Name = "Options"
    scroll.Size = UDim2.new(1, -18, 1, -46)
    scroll.Position = UDim2.new(0, 9, 0, 38)
    scroll.BackgroundColor3 = Color3.fromRGB(26,29,42)
    scroll.BackgroundTransparency = 0.08
    scroll.BorderSizePixel = 0
    scroll.ScrollBarThickness = 7
    scroll.ScrollingDirection = Enum.ScrollingDirection.Y
    scroll.CanvasSize = UDim2.new(0,0,0,0)
    scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y
    scroll.ZIndex = 2
    scroll.Parent = bg

    local uiList = Instance.new("UIListLayout")
    uiList.Parent = scroll
    uiList.SortOrder = Enum.SortOrder.LayoutOrder
    uiList.Padding = UDim.new(0,6)

    -- Animaci칩n arco칤ris
    game:GetService("RunService").RenderStepped:Connect(function()
        for i,rf in ipairs(borders) do
            rf.BackgroundColor3 = rainbowColor(0.35+(i*0.06), 1, 1)
        end
    end)

    -- Drag only by barra de t칤tulo
    local dragging, dragInput, dragStart, startPos
    bar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    bar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if dragging and input == dragInput then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(
                startPos.X.Scale, startPos.X.Offset + delta.X,
                startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    -- API object
    local api = setmetatable({
        _sg = sg,
        _hud = frame,
        _scroll = scroll,
        _window = frame
    }, RainbowUI)
    return api
end

function RainbowUI:AddButton(text, callback)
    local btn = Instance.new("TextButton")
    btn.Text = "  "..(text or "Bot칩n")
    btn.Size = UDim2.new(1, -10, 0, 33)
    btn.BackgroundColor3 = Color3.fromRGB(36,36,50)
    btn.BorderSizePixel = 0
    btn.Font = Enum.Font.GothamSemibold
    btn.TextSize = 17
    btn.TextColor3 = Color3.fromRGB(210,210,255)
    btn.AutoButtonColor = true
    btn.ZIndex = 4
    btn.Parent = self._scroll
    btn.MouseButton1Click:Connect(function()
        if callback then pcall(callback) end
    end)
    return btn
end

function RainbowUI:Destroy()
    if self._sg then self._sg:Destroy() end
end

return RainbowUI
