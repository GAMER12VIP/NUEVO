-- RainbowUI Library (Modificada: tÃ­tulo fijo "SCRIPTðŸ˜ˆLUIS")
local RainbowUI = {}
RainbowUI.__index = RainbowUI

local function rainbowColor(speed)
    return Color3.fromHSV((tick()*speed)%1,1,1)
end

function RainbowUI:CreateWindow(_, width, height)  -- El primer argumento ya no importa, el texto es fijo
    local sg = Instance.new("ScreenGui")
    sg.Name = "RainbowUI"
    sg.ResetOnSpawn = false
    sg.IgnoreGuiInset = true
    sg.Parent = game:GetService("Players").LocalPlayer.PlayerGui

    local frame = Instance.new("Frame")
    frame.Name = "MainFrame"
    frame.Size = UDim2.new(0, width or 330, 0, height or 350)
    frame.Position = UDim2.fromOffset(200,180)
    frame.BackgroundTransparency = 1
    frame.Parent = sg

    local rainbowFrames = {}
    for i,side in ipairs({"Top","Bottom","Left","Right"}) do
        local border = Instance.new("Frame")
        border.BackgroundColor3 = Color3.new(1,1,1)
        border.BorderSizePixel = 0
        border.ZIndex = 2
        border.Name = side
        border.Parent = frame
        if side=="Top" then
            border.Size = UDim2.new(1,0,0,4)
            border.Position = UDim2.new(0,0,0,-4)
        elseif side=="Bottom" then
            border.Size = UDim2.new(1,0,0,4)
            border.Position = UDim2.new(0,0,1,0)
        elseif side=="Left" then
            border.Size = UDim2.new(0,4,1,0)
            border.Position = UDim2.new(0,-4,0,0)
        elseif side=="Right" then
            border.Size = UDim2.new(0,4,1,0)
            border.Position = UDim2.new(1,0,0,0)
        end
        table.insert(rainbowFrames, border)
    end

    local bg = Instance.new("Frame")
    bg.Parent = frame
    bg.BackgroundColor3 = Color3.fromRGB(22,22,40)
    bg.Size = UDim2.new(1,0,1,0)
    bg.Position = UDim2.new(0,0,0,0)
    bg.BorderSizePixel = 0

    local bar = Instance.new("Frame")
    bar.BackgroundColor3 = Color3.fromRGB(18, 18, 28)
    bar.Size = UDim2.new(1,0,0,35)
    bar.Position = UDim2.new(0,0,0,0)
    bar.BorderSizePixel = 0
    bar.ZIndex = 4
    bar.Parent = bg

    -- TÃ­tulo FIJO:
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Text = "  SCRIPTðŸ˜ˆLUIS"
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextSize = 21
    titleLabel.TextColor3 = Color3.fromRGB(224,245,255)
    titleLabel.BackgroundTransparency = 1
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.Size = UDim2.new(1,0,1,0)
    titleLabel.Parent = bar

    local dragging, dragInput, dragStart, startPos
    bar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    bar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    local scroll = Instance.new("ScrollingFrame")
    scroll.Name = "Options"
    scroll.Size = UDim2.new(1, -20, 1, -50)
    scroll.Position = UDim2.new(0,10,0,40)
    scroll.CanvasSize = UDim2.new(0,0,0,0)
    scroll.ScrollBarThickness = 7
    scroll.BackgroundTransparency = 0.17
    scroll.BackgroundColor3 = Color3.fromRGB(17,21,32)
    scroll.BorderSizePixel = 0
    scroll.Parent = bg
    scroll.AutomaticCanvasSize = Enum.AutomaticSize.Y

    local layout = Instance.new("UIListLayout")
    layout.Parent = scroll
    layout.Padding = UDim.new(0,6)
    layout.SortOrder = Enum.SortOrder.LayoutOrder
    scroll.ChildAdded:Connect(function()
        scroll.CanvasSize = UDim2.new(0,0,0,layout.AbsoluteContentSize.Y+15)
    end)

    game:GetService("RunService").RenderStepped:Connect(function()
        local col = rainbowColor(0.35)
        for _,rf in ipairs(rainbowFrames) do
            rf.BackgroundColor3 = col
        end
    end)

    local api = setmetatable({
        _sg = sg,
        _hud = frame,
        _scroll = scroll,
        _title = titleLabel,
        _window = frame
    }, RainbowUI)
    return api
end

function RainbowUI:AddButton(text, callback)
    local btn = Instance.new("TextButton")
    btn.Text = text or "BotÃ³n"
    btn.Size = UDim2.new(1, -6, 0, 36)
    btn.BackgroundColor3 = Color3.fromRGB(34,34,44)
    btn.BorderSizePixel = 0
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 18
    btn.TextColor3 = Color3.fromRGB(236,236,255)
    btn.AutoButtonColor = true
    btn.Parent = self._scroll
    btn.MouseButton1Click:Connect(function()
        if callback then
            pcall(callback)
        end
    end)
    return btn
end

function RainbowUI:Destroy()
    self._sg:Destroy()
end

return RainbowUI
